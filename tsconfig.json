    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "rootDir": "src",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "bower_components"
    ]
}